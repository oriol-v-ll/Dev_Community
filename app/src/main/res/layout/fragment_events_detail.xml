<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:verticalScrollbarPosition="defaultPosition"
    app:layout_scrollFlags="scroll">

    <ImageView
        android:id="@+id/imageDetailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_faqs"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_user" />

    <TextView
        android:id="@+id/titleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageDetailId"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/cabin"
        android:paddingLeft="15dp"
        android:text="Titulo"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/titleId"
        android:layout_marginTop="3dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/placeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleId"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/cabin"
        android:paddingRight="20dp"
        android:text="Sitio"
        android:textAlignment="viewEnd"
        android:textColor="#FC7C7C7C"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/infoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeId"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/cabin"
        android:paddingLeft="20dp"
        android:paddingRight="7dp"
        android:paddingBottom="15dp"
        android:scrollbars="vertical"
        android:text="Informacion"
        android:textAlignment="viewStart"
        android:textColor="#474747"
        android:textSize="18sp" />


</LinearLayout>